<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activities.IntroSliderActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_intro_slider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@null">

    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="@string/skip"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:autoMirrored="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:rotationY="@integer/locale_mirror_flip">

            <TextView
                android:id="@+id/indicator1_intro_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="."
                android:textColor="@color/colorPrimary"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/indicator2_intro_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/colorSecondaryText"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/indicator3_intro_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/colorSecondaryText"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/indicator4_intro_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/colorSecondaryText"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/indicator5_intro_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textColor="@color/colorSecondaryText"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next_intro_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="@string/next"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>


</RelativeLayout>